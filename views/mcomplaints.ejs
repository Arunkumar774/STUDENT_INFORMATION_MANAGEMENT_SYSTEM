    <div class="complaints">
            <%if(!details){%>
                <h1>No data found</h1>
            <%}else{%>
                <%details.forEach((complaint)=>{%>
                    <table>
                        <tr><td><span>Name:</span><%=complaint.name%></td><td><span id="span">complaint</span></td></tr>
                        <tr><td><span>ID:</span><%=complaint.id%></td><td><%=complaint.complaint%></td></tr>
                        <tr><td><span>Date:</span><%var date=new Date(complaint.date)%><%=date.toLocaleDateString()%></td><td><form action="/mdelete" method="post"><input type="text" style="display: none;" name="id" id="id" value="<%=complaint.id%>"><input id="delete-button" type="submit" value="Delete"></form></td></tr>
                    </table>
                <%})%>
            <%}%>
    </div>
